<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/game_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <GridLayout
        android:id="@+id/GameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:columnCount="4"
        android:rowCount="6"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        //Row 0

        <Button
            android:id="@+id/grid00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid20"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid30"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />

        //Row 1

        <Button
            android:id="@+id/grid01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid31"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />

        //Row 2

        <Button
            android:id="@+id/grid02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid22"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid32"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />

        //Row 3

        <Button
            android:id="@+id/grid03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid23"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid33"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />

        //Row 4

        <Button
            android:id="@+id/grid04"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid24"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid34"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />

        //Row 5

        <Button
            android:id="@+id/grid05"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="5"
            android:layout_column="1"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid25"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="5"
            android:layout_column="2"
            android:text="@string/button" />

        <Button
            android:id="@+id/grid35"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="@string/button" />
    </GridLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="GoalCounter: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_toolbar" />

    <TextView
        android:id="@+id/GoalCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/game_toolbar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Move Counter: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/MoveCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>